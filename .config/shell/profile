#
# ~/.bash_profile
#

[[ -f ~/.bashrc ]] && . ~/.bashrc

export PATH=$PATH:$HOME/.local/bin
export EDITOR="nvim"
export BROWSER="brave"

# To start startx if on tty1 automatically
[ -z $DISPLAY ] && [ $(tty) = /dev/tty1 ] && exec startx || exit 1
# Calling key maps remapped
[ -r $HOME/.local/bin/ ] && remaps || return 0
